<div class="container">
  <div class="row p-3 m-3 bg-ligh">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 justify-content-center">
      <h2>New ingredient dose</h2>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, collection: Ingredient.ordered %>

        <%= link_to 'Cancel', cocktail_path(@cocktail), class: 'btn btn-outline-secondary' %>
        <%= f.submit class: 'btn btn-dark' %>
      <% end %>
    </div>
  </div>
</div>
