<div class="container">
  <div class="row p-3 m-3 bg-ligh">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 justify-content-center">
      <h1>Cocktails</h1>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <li class="list-group-item m-3 .text-secondary">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-dark' %>
    </div>
  </div>
</div>
